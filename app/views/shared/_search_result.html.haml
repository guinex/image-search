      datatype: 'script',
      data: {design_id: design_id, geo: geo},
      success: function(data){
        if (data['status'] == 'ok')
          $('#'+design_id+'_domestic').text("Removed");
        else if (data['status'] == 'invalid')
          alert("Oops! Something went wrong.");          
      },
      error: function(xhr, status, error){
        alert("Oops! Something went wrong.");
      }
    });  
  });